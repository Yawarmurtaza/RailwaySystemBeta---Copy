<Window x:Class="ClientWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="127*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="usernameTB" HorizontalAlignment="Left" Height="22" Margin="203,92,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" GotFocus="usernameTB_GotFocus" LostFocus="usernameTB_LostFocus"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="203,135,0,0" VerticalAlignment="Top" Width="120" Height="24" Password="password" GotFocus="PasswordBox_OnGotFocus" LostFocus="PasswordBox_OnLostFocus"/>
        <Button x:Name="loginBT" Content="Login" HorizontalAlignment="Left" Margin="203,193,0,0" VerticalAlignment="Top" Width="120" Click="loginBT_Click"/>
        <Button x:Name="signupBT" Content="Sign Up" HorizontalAlignment="Left" Margin="203,218,0,0" VerticalAlignment="Top" Width="120" Click="signupBT_Click"/>
    </Grid>
</Window>
